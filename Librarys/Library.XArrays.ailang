// Find index of first occurrence of value
// Returns index if found, XNULL (-1) if not found
Function.XArray.XIndexOf {
    Input: arr: Address
    Input: value: Integer
    Output: Integer
    Body: {
        size = Dereference(Add(arr, 8))
        data = Dereference(Add(arr, 16))
        
        i = 0
        WhileLoop LessThan(i, size) {
            current = ArrayGet(data, i)
            IfCondition EqualTo(current, value) ThenBlock: {
                ReturnValue(i)
            }
            i = Add(i, 1)
        }
        
        ReturnValue(XArrays.XNULL)
    }
}


// Returns new array address
Function.XArray.XCopy {
    Input: arr: Address
    Output: Address
    Body: {
        size = Dereference(Add(arr, 8))
        capacity = Dereference(arr)
        data = Dereference(Add(arr, 16))
        
        // Create new array with same capacity
        new_arr = XArray.XCreate(capacity)
        new_data = Dereference(Add(new_arr, 16))
        
        // Copy all elements
        i = 0
        WhileLoop LessThan(i, size) {
            val = ArrayGet(data, i)
            ArraySet(new_data, i, val)
            i = Add(i, 1)
        }
        
        // Set size
        StoreValue(Add(new_arr, 8), size)
        
        ReturnValue(new_arr)
    }
}

// Insert element at specific index, shifting elements right
// Returns 1 on success, 0 on failure
Function.XArray.XInsert {
    Input: arr: Address
    Input: index: Integer
    Input: value: Integer
    Output: Integer
    Body: {
        capacity = Dereference(arr)
        size = Dereference(Add(arr, 8))
        data = Dereference(Add(arr, 16))
        
        // Validate index (can insert at size position = append)
        IfCondition Or(LessThan(index, 0), GreaterThan(index, size)) ThenBlock: {
            ReturnValue(0)
        }
        
        // Check if resize needed
        IfCondition GreaterEqual(size, capacity) ThenBlock: {
            new_capacity = Multiply(capacity, 2)
            new_data = ArrayCreate(new_capacity)
            
            // Copy old data
            i = 0
            WhileLoop LessThan(i, size) {
                old_val = ArrayGet(data, i)
                ArraySet(new_data, i, old_val)
                i = Add(i, 1)
            }
            
            ArrayDestroy(data)
            StoreValue(arr, new_capacity)
            StoreValue(Add(arr, 16), new_data)
            data = new_data
        }
        
        // Shift elements right from end to index
        i = size
        WhileLoop GreaterThan(i, index) {
            prev_val = ArrayGet(data, Subtract(i, 1))
            ArraySet(data, i, prev_val)
            i = Subtract(i, 1)
        }
        
        // Insert new value
        ArraySet(data, index, value)
        
        // Update size
        StoreValue(Add(arr, 8), Add(size, 1))
        
        ReturnValue(1)
    }
}

// Delete element at specific index, shifting elements left
// Returns the deleted value, or XERROR if invalid index
Function.XArray.XDelete {
    Input: arr: Address
    Input: index: Integer
    Output: Integer
    Body: {
        size = Dereference(Add(arr, 8))
        data = Dereference(Add(arr, 16))
        
        // Validate index
        IfCondition Or(LessThan(index, 0), GreaterEqual(index, size)) ThenBlock: {
            ReturnValue(XArrays.XERROR)
        }
        
        // Save value to return
        deleted_value = ArrayGet(data, index)
        
        // Shift elements left
        i = index
        last_idx = Subtract(size, 1)
        WhileLoop LessThan(i, last_idx) {
            next_val = ArrayGet(data, Add(i, 1))
            ArraySet(data, i, next_val)
            i = Add(i, 1)
        }
        
        // Update size
        StoreValue(Add(arr, 8), Subtract(size, 1))
        
        ReturnValue(deleted_value)
    }
}

