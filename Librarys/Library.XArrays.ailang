// Insert keeping array sorted (ascending)
// Useful for line number insertion in BASIC interpreter
// Returns index where inserted
Function.XArray.XInsertSorted {
    Input: arr: Address
    Input: value: Integer
    Output: Integer
    Body: {
        size = Dereference(Add(arr, 8))
        data = Dereference(Add(arr, 16))
        
        // Find insertion point (first element > value)
        insert_idx = size
        i = 0
        found = 0
        WhileLoop And(LessThan(i, size), EqualTo(found, 0)) {
            current = ArrayGet(data, i)
            IfCondition GreaterThan(current, value) ThenBlock: {
                insert_idx = i
                found = 1
            }
            i = Add(i, 1)
        }
        
        // Insert at found position
        XArray.XInsert(arr, insert_idx, value)
        
        ReturnValue(insert_idx)
    }
}

// Binary search in sorted array
// Returns index if found, XNULL if not found
Function.XArray.XBinarySearch {
    Input: arr: Address
    Input: value: Integer
    Output: Integer
    Body: {
        size = Dereference(Add(arr, 8))
        data = Dereference(Add(arr, 16))
        
        left = 0
        right = Subtract(size, 1)
        
        WhileLoop LessEqual(left, right) {
            mid = Divide(Add(left, right), 2)
            mid_val = ArrayGet(data, mid)
            
            IfCondition EqualTo(mid_val, value) ThenBlock: {
                ReturnValue(mid)
            }
            
            IfCondition LessThan(mid_val, value) ThenBlock: {
                left = Add(mid, 1)
            } ElseBlock: {
                right = Subtract(mid, 1)
            }
        }
        
        ReturnValue(XArrays.XNULL)
    }
}

// Swap two elements by index
Function.XArray.XSwap {
    Input: arr: Address
    Input: idx1: Integer
    Input: idx2: Integer
    Output: Integer
    Body: {
        size = Dereference(Add(arr, 8))
        
        // Validate indices
        IfCondition Or(LessThan(idx1, 0), GreaterEqual(idx1, size)) ThenBlock: {
            ReturnValue(0)
        }
        IfCondition Or(LessThan(idx2, 0), GreaterEqual(idx2, size)) ThenBlock: {
            ReturnValue(0)
        }
        
        data = Dereference(Add(arr, 16))
        
        val1 = ArrayGet(data, idx1)
        val2 = ArrayGet(data, idx2)
        
        ArraySet(data, idx1, val2)
        ArraySet(data, idx2, val1)
        
        ReturnValue(1)
    }
}

