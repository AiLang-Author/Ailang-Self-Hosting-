// Resize array to exact capacity (shrink or grow)
Function.XArray.XResize {
    Input: arr: Address
    Input: new_capacity: Integer
    Output: Integer
    Body: {
        old_capacity = Dereference(arr)
        size = Dereference(Add(arr, 8))
        old_data = Dereference(Add(arr, 16))
        
        // Don't allow shrinking below current size
        IfCondition LessThan(new_capacity, size) ThenBlock: {
            new_capacity = size
        }
        
        // Create new data array
        new_data = ArrayCreate(new_capacity)
        
        // Copy existing elements
        i = 0
        WhileLoop LessThan(i, size) {
            val = ArrayGet(old_data, i)
            ArraySet(new_data, i, val)
            i = Add(i, 1)
        }
        
        // Free old and update
        ArrayDestroy(old_data)
        StoreValue(arr, new_capacity)
        StoreValue(Add(arr, 16), new_data)
        
        ReturnValue(1)
    }
}

