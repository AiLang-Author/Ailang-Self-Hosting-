LinkagePool.TestData {
    "name": Initialize=""
    "code": Initialize=""
    "count": Initialize=0
}

data = AllocateLinkage(LinkagePool.TestData)

PrintMessage("Before assignment:\n")
PrintMessage("  name: '")
PrintMessage(data.name)
PrintMessage("'\n")

// Assign strings
data.name = "Alice"
data.code = "X40"
data.count = 123

PrintMessage("\nAfter assignment:\n")
PrintMessage("  name: '")
PrintMessage(data.name)
PrintMessage("'\n")
PrintMessage("  code: '")
PrintMessage(data.code)
PrintMessage("'\n")
PrintMessage("  count: ")
PrintNumber(data.count)
PrintMessage("\n")

// Test comparison
PrintMessage("\nString comparison test:\n")
result = StringCompare(data.code, "X40")
PrintMessage("  StringCompare(data.code, 'X40') = ")
PrintNumber(result)
PrintMessage("\n")

IfCondition EqualTo(result, 0) ThenBlock: {
    PrintMessage("  ✅ Strings match!\n")
} ElseBlock: {
    PrintMessage("  ❌ Strings don't match\n")
}

PrintMessage("\nDone!\n")
