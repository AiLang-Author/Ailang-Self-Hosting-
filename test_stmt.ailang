// test_stmt.ailang
// Test statements: assignment, if, while, break, continue

SubRoutine.Main {
    // Test 1: Assignment
    x = Add(5, 3)
    PrintNumber(x)
    PrintMessage("\n")
    
    // Test 2: If/Else
    IfCondition GreaterThan(x, 4) ThenBlock: {
        PrintMessage("x > 4\n")
    } ElseBlock: {
        PrintMessage("x <= 4\n")
    }
    
    // Test 3: While loop
    i = 0
    WhileLoop LessThan(i, 5) {
        PrintNumber(i)
        PrintMessage(" ")
        i = Add(i, 1)
    }
    PrintMessage("\n")
    
    // Test 4: Break
    j = 0
    WhileLoop LessThan(j, 100) {
        PrintNumber(j)
        PrintMessage(" ")
        IfCondition EqualTo(j, 3) ThenBlock: {
            ExitLoop
        }
        j = Add(j, 1)
    }
    PrintMessage("\n")
}

RunTask(Main)